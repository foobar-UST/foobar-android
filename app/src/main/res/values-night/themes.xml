<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Full screen dialog fragment -->
    <style name="ThemeOverlay.Foobar.Dialog.Fullscreen.DayNight" parent="ThemeOverlay.Foobar.Dialog.Fullscreen.Dark"/>

    <style name="ThemeOverlay.Foobar.Dialog.Fullscreen.Dark" parent="@style/ThemeOverlay.Foobar.Dialog.Fullscreen">
        <item name="android:colorBackground">@color/background_dark</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="ThemeOverlay.Foobar.BottomSheetDialog.DayNight" parent="@style/ThemeOverlay.Foobar.BottomSheetDialog.Dark"/>

    <style name="ThemeOverlay.Foobar.BottomSheetDialog.Dark" parent="@style/ThemeOverlay.Foobar.BottomSheetDialog">
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

    <!-- Onboarding -->
    <style name="Theme.Foobar.Onboarding.DayNight" parent="Theme.Foobar.Onboarding.Dark"/>

    <style name="Theme.Foobar.Onboarding.Dark" parent="Theme.Foobar.Dark">
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Auth activity -->
    <style name="Theme.Foobar.Auth.DayNight" parent="Theme.Foobar.Auth.Dark"/>

    <style name="Theme.Foobar.Auth.Dark" parent="Theme.Foobar.Dark">
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Splash activity -->
    <style name="Theme.Foobar.Splash.DayNight" parent="Theme.Foobar.Splash.Dark"/>

    <style name="Theme.Foobar.Splash.Dark" parent="Theme.Foobar.Dark">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.Foobar.DayNight" parent="Theme.Foobar.Dark"/>

    <style name="Theme.Foobar.Dark" parent="Theme.Foobar">
        <item name="colorPrimary">@color/maroon_400</item>
        <item name="colorPrimaryVariant">@color/maroon_400</item>
        <item name="colorSecondary">@color/mint_400</item>
        <item name="colorSecondaryVariant">@color/mint_400</item>
        <item name="colorError">@color/red_400</item>
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/grey</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="scrimBackground">@color/black_alpha_20</item>
        <item name="elevationOverlayEnabled">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="cartBackgroundColor">@color/grey</item>
    </style>
</resources>