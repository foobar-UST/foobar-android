<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="moreItemModel"
            type="com.foobarust.android.sellerdetail.SellerItemDetailListModel.SellerItemDetailMoreItemModel" />
        <variable
            name="listener"
            type="com.foobarust.android.sellerdetail.SellerItemDetailAdapter.SellerItemDetailAdapterListener" />
        <import type="com.foobarust.domain.models.seller.SellerItemBasicKt"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{() -> listener.onMoreItemClicked(moreItemModel.itemBasic)}">

        <!--suppress AndroidUnknownAttribute -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/select_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:onCheckedChanged="@{(view, checked) -> listener.onMoreItemCheckedChange(moreItemModel.itemBasic, checked)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large"
            android:text="@{SellerItemBasicKt.getNormalizedTitle(moreItemModel.itemBasic)}"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:minLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            app:layout_constraintStart_toEndOf="@id/select_check_box"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/price_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Rodeo Beef Burger"/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:text="@{@string/seller_item_data_format_price(moreItemModel.itemBasic.price)}"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/material_secondary_emphasis_high_disabled"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="$ 35.8"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>