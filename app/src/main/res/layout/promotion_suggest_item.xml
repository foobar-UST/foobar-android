<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="suggestBasic"
            type="com.foobarust.domain.models.SuggestBasic" />
        <variable
            name="listener"
            type="com.foobarust.android.promotion.PromotionSuggestAdapter.PromotionSuggestAdapterListener" />
        <import type="com.foobarust.android.R" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_xmedium"
        android:focusable="true"
        android:clickable="true"
        android:onClick="@{() -> listener.onPromotionSuggestItemClicked(suggestBasic)}"
        app:cardElevation="@dimen/elevation_none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:contentDescription="@{suggestBasic.itemTitle}"
                app:glideUrl="@{suggestBasic.imageUrl}"
                app:glideCenterCrop="@{true}"
                app:glidePlaceholder="@{R.drawable.placeholder_card}"
                tools:src="@sample/sample_image_5"/>

            <TextView
                android:id="@+id/card_item_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:layout_marginStart="@dimen/spacing_xmedium"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:text="@{suggestBasic.itemTitle}"
                android:textAppearance="?attr/textAppearanceBody2"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Broccoli and buckwheat crepes"/>

            <TextView
                android:id="@+id/card_seller_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_xmedium"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:layout_marginBottom="@dimen/spacing_xmedium"
                android:text="@{suggestBasic.sellerName}"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Happy Restaurant"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
