<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="itemModel"
            type="com.foobarust.android.sellerdetail.SellerItemsListModel" />
        <variable
            name="listener"
            type="com.foobarust.android.sellerdetail.SellerItemsAdapter.SellerItemsAdapterListener" />
        <import type="com.foobarust.domain.models.seller.SellerItemBasicKt" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:background="?attr/selectableItemBackground"
        android:enabled="@{itemModel.itemPurchasable}"
        android:onClick="@{() -> listener.onSellerItemClicked(itemModel.itemId)}">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/price_text_view"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@{itemModel.itemTitle}"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/material_on_surface_emphasis_high_disabled"
            android:minLines="2"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            android:enabled="@{itemModel.itemPurchasable}"
            tools:text="Item Title"/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@{@string/seller_item_data_format_price(itemModel.itemPrice)}"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/material_secondary_emphasis_high_disabled"
            android:enabled="@{itemModel.itemPurchasable}"
            tools:text="$ 35.8"/>

    </RelativeLayout>

</layout>
