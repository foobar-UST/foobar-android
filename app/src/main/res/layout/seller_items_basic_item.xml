<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="sellerItemBasic"
            type="com.foobarust.domain.models.SellerItemBasic" />
        <variable
            name="listener"
            type="com.foobarust.android.sellerdetail.SellerItemsAdapter.SellerItemsAdapterListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{() -> listener.onSellerItemClicked(sellerItemBasic)}">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/price_text_view"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@{sellerItemBasic.title}"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/material_on_surface_emphasis_high_type"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Item Title"/>

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/price_text_view"
            android:layout_marginEnd="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:layout_below="@id/title_text_view"
            android:text="@{sellerItemBasic.description}"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Items description will be shown here."/>

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@{@string/item_price_format(sellerItemBasic.price)}"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?attr/colorSecondary"
            tools:text="$ 35.8"/>

    </RelativeLayout>

</layout>
