<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="purchaseItemModel"
            type="com.foobarust.android.order.OrderDetailListModel.OrderDetailPurchaseItemModel" />
        <import type="com.foobarust.android.R"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:padding="@dimen/spacing_large">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/item_image_view"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            app:glideUrl="@{purchaseItemModel.orderItemImageUrl}"
            app:glideCenterCrop="@{true}"
            app:glidePlaceholder="@{R.drawable.placeholder_card}"
            app:shapeAppearance="@style/ShapeAppearance.Foobar.SmallComponent"
            app:goneIf="@{purchaseItemModel.orderItemImageUrl == null}"
            app:layout_constraintTop_toTopOf="@id/item_title_text_view"
            app:layout_constraintBottom_toBottomOf="@id/item_title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@sample/sample_image_5"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/item_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_xmedium"
            android:text="@{@string/order_detail_purchase_item_format_title(purchaseItemModel.orderItemTitle, purchaseItemModel.orderItemAmounts)}"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="@color/material_on_surface_emphasis_medium"
            android:lineSpacingMultiplier="1.2"
            app:layout_goneMarginStart="@dimen/spacing_none"
            app:layout_constraintStart_toEndOf="@id/item_image_view"
            app:layout_constraintEnd_toStartOf="@id/item_price_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Chicken Tikka Masala x 1" />

        <TextView
            android:id="@+id/item_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/order_detail_purchase_item_format_price(purchaseItemModel.orderItemTotalPrice)}"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_title_text_view"
            tools:text="x $36.9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
