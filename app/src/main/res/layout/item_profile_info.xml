<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="userModel"
            type="com.foobarust.domain.models.UserDetailInfo" />
        <variable
            name="listener"
            type="com.foobarust.android.profile.ProfileAdapter.ProfileAdapterListener" />
        <import type="com.foobarust.android.R"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="center_horizontal"
            android:onClick="@{() -> listener.onProfileAvatarClicked()}"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Foobar.Avatar"
            app:glideUrl="@{userModel.photoUrl}"
            app:glideCenterCrop="@{true}"
            app:glidePlaceholder="@{R.drawable.ic_user}" />

        <TextView
            android:id="@+id/username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_gravity="center_horizontal"
            android:text="@{userModel.username}"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textStyle="bold"
            tools:text="user"/>

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:layout_gravity="center_horizontal"
            android:text="@{userModel.email}"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:textColor="@color/material_on_background_emphasis_medium"
            tools:text="user@connect.ust.hk"/>

    </LinearLayout>

</layout>
