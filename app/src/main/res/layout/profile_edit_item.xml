<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="editItemModel"
            type="com.foobarust.android.settings.ProfileListModel.ProfileEditItemModel" />
        <variable
            name="listener"
            type="com.foobarust.android.settings.ProfileAdapter.ProfileAdapterListener" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> listener.onProfileEditItemClicked(editItemModel)}"
        app:cardElevation="@dimen/elevation_none"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_mlarge"
            android:background="?attr/colorSurface">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{editItemModel.title}"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                tools:text="Name"/>

            <TextView
                android:id="@+id/value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{editItemModel.displayValue}"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textAppearance="?attr/textAppearanceBody2"
                android:drawablePadding="@dimen/spacing_xmedium"
                app:drawableEndCompat="@drawable/ic_create"
                app:drawableFitVertical="@{true}"
                app:drawableTint="@color/material_on_surface_emphasis_medium"
                tools:text="Lucille Rooney"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
