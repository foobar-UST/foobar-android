<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="content"
            type="String" />
        <variable
            name="hideWhen"
            type="Boolean" />
        <variable
            name="disableWhen"
            type="Boolean" />
    </data>

    <!--suppress AndroidUnknownAttribute -->
    <TextView
        android:id="@+id/notice_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_large"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_xmedium"
        android:paddingBottom="@dimen/spacing_xmedium"
        android:background="@color/material_secondary_variant_emphasis_high_disabled"
        android:gravity="center_vertical"
        android:text="@{content}"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorOnSecondary"
        android:selected="@{true}"
        android:enabled="@{!disableWhen}"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        app:goneIf="@{hideWhen}"
        app:layout_constraintTop_toBottomOf="@id/seller_image_view"
        tools:text="ðŸŽ‰ Restaurant notice will be shown here. Hello World. Testing Here." />

</layout>