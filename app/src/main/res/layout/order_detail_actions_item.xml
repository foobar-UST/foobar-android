<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="actionsItemModel"
            type="com.foobarust.android.order.OrderDetailListModel.OrderDetailActionsItemModel" />
        <variable
            name="listener"
            type="com.foobarust.android.order.OrderDetailAdapter.OrderDetailAdapterListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_large"
        android:orientation="vertical">

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/seller_contact_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_detail_actions_button_seller_contact"
            android:onClick="@{() -> listener.onNavigateToSellerContact()}"/>

    </LinearLayout>

</layout>