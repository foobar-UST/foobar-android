<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_xmedium"
    android:orientation="vertical">

    <include
        layout="@layout/notice_banner"
        android:id="@+id/seller_offline_notice_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/seller_image_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/spacing_large"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@sample/sample_image_5"/>

    <include
        layout="@layout/cart_info_item_nav"
        android:id="@+id/section_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/cart_info_item_nav"
        android:id="@+id/misc_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
