<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="amountModel"
            type="com.foobarust.android.sellerdetail.SellerItemDetailListModel.SellerItemDetailAmountModel" />
        <variable
            name="listener"
            type="com.foobarust.android.sellerdetail.SellerItemDetailAdapter.SellerItemDetailAdapterListener" />
        <import type="com.foobarust.android.utils.BindingConverters" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/increment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/min_icon_touch_padding"
            android:src="@drawable/ic_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> listener.onAmountIncremented()}"
            app:tint="@color/material_on_surface_disabled"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_large"
            android:text="@{BindingConverters.intToString(amountModel.amount)}"
            android:textColor="?attr/colorPrimary"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="2"/>

        <ImageButton
            android:id="@+id/decrement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/min_icon_touch_padding"
            android:src="@drawable/ic_remove"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:onClick="@{() -> listener.onAmountDecremented()}"
            app:tint="@color/material_on_surface_disabled"/>

    </LinearLayout>

</layout>