<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.foobarust.android.seller.SellerDetailViewModel" />
        <import type="com.foobarust.domain.models.SellerDetailKt" />
        <import type="com.foobarust.android.R" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        app:layoutFullscreen="@{true}">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/elevation_none">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="?attr/colorSurface"
                app:titleEnabled="false"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/colorSurface"
                    app:layout_collapseMode="parallax">

                    <!-- Top scrim to emphasis status bar icon -->
                    <FrameLayout
                        android:id="@+id/seller_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:foreground="@drawable/scrim_fade_top">

                        <ImageView
                            android:id="@+id/seller_image_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:contentDescription="@{viewModel.sellerDetail.name}"
                            app:glideUrl="@{viewModel.sellerDetail.imageUrl}"
                            app:glideCenterCrop="@{true}"
                            app:glidePlaceholder="@{R.drawable.placeholder_card}"
                            tools:src="@sample/sample_image_5" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_mlarge"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_toStartOf="@id/rating_chip"
                        android:layout_below="@id/seller_image_layout"
                        android:text="@{viewModel.sellerDetail.name}"
                        android:textAppearance="?attr/textAppearanceHeadline5"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Happy Restaurant"/>

                    <TextView
                        android:id="@+id/description_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_xmedium"
                        android:layout_toStartOf="@id/rating_chip"
                        android:layout_below="@id/name_text_view"
                        android:text="@{viewModel.sellerDetail.description}"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:maxLines="2"
                        android:ellipsize="end"
                        tools:text="Description will be shown here."/>

                    <TextView
                        android:id="@+id/status_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:layout_marginTop="@dimen/spacing_xmedium"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_marginBottom="@dimen/spacing_large"
                        android:layout_below="@id/description_text_view"
                        android:text="@{viewModel.sellerDetail != null ? SellerDetailKt.isOpening(viewModel.sellerDetail) ? @string/seller_status_opening_detail(viewModel.sellerDetail.openTime, viewModel.sellerDetail.closeTime) : @string/seller_status_closed_detail(viewModel.sellerDetail.openTime, viewModel.sellerDetail.closeTime) : ``}"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorSecondary"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Now Opening (9:00 - 22:00)"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/rating_chip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_mlarge"
                        android:layout_marginEnd="@dimen/spacing_large"
                        android:layout_below="@id/seller_image_layout"
                        android:layout_alignParentEnd="true"
                        android:text="@{@string/seller_rating_format(viewModel.sellerDetail.rating)}"
                        app:chipIcon="@drawable/ic_star"
                        app:chipIconTint="@color/yellow"
                        app:chipIconSize="18dp"
                        app:chipStartPadding="@dimen/spacing_xmedium"
                        app:chipEndPadding="@dimen/spacing_xmedium"
                        app:goneIf="@{viewModel.sellerDetail == null}"
                        tools:text="4.6"/>

                </RelativeLayout>

                <com.google.android.material.appbar.MaterialToolbar
                    style="@style/Widget.MaterialComponents.Toolbar.Surface"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:title="@{viewModel.showToolbarTitle ? viewModel.sellerDetail.name : null}"
                    app:layout_collapseMode="pin"
                    app:navigationIcon="@drawable/ic_arrow_back"
                    app:menu="@menu/menu_toolbar_seller_detail"
                    app:paddingTopSystemWindowInsets="@{true}"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/category_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:tabMode="scrollable"
                app:tabPaddingStart="@dimen/spacing_large"
                app:tabPaddingEnd="@dimen/spacing_large"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/items_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
