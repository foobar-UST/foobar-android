<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sellerBasicItem"
            type="com.foobarust.domain.models.SellerBasic" />
        <variable
            name="listener"
            type="com.foobarust.android.seller.SellerAdapter.SellerAdapterListener" />
        <import type="com.foobarust.android.R" />
        <import type="com.foobarust.domain.models.SellerBasicKt"/>
    </data>

    <!--suppress AndroidUnknownAttribute -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:onClick="@{() -> listener.onSellerListItemClicked(sellerBasicItem)}"
        android:onLongClick="@{(view) -> listener.onSellerListItemLongClicked(view, sellerBasicItem)}"
        app:cardBackgroundColor="?android:attr/colorBackground"
        app:cardElevation="@dimen/elevation_none"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_large">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_image_view"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:contentDescription="@{sellerBasicItem.name}"
                app:shapeAppearance="@style/ShapeAppearance.Foobar.SmallComponent"
                app:glideUrl="@{sellerBasicItem.imageUrl}"
                app:glideCenterCrop="@{true}"
                app:glidePlaceholder="@{R.drawable.placeholder_card}"
                tools:src="@drawable/sample_image_2"/>

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:layout_below="@id/photo_image_view"
                android:layout_toStartOf="@id/rating_chip"
                android:text="@{sellerBasicItem.name}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Happy Restaurant"/>

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:layout_below="@id/title_text_view"
                android:layout_toStartOf="@id/rating_chip"
                android:text="@{sellerBasicItem.description}"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Provide chinese and western cuisines"/>

            <TextView
                android:id="@+id/status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_xmedium"
                android:layout_below="@id/description_text_view"
                android:text="@{SellerBasicKt.isOpening(sellerBasicItem) ? @string/seller_status_opening : @string/seller_status_closed}"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textColor="?attr/colorSecondary"
                tools:text="Opening"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/rating_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/photo_image_view"
                android:text="@{@string/seller_rating_format(sellerBasicItem.rating)}"
                app:chipIcon="@drawable/ic_star"
                app:chipIconTint="@color/yellow"
                app:chipIconSize="18dp"
                app:chipStartPadding="@dimen/spacing_xmedium"
                app:chipEndPadding="@dimen/spacing_xmedium"
                tools:text="4.6"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
