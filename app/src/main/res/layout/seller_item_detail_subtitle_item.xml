<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="subtitleItemModel"
            type="com.foobarust.android.sellerdetail.SellerItemDetailListModel.SellerItemDetailSubtitleItemModel" />
    </data>

    <TextView
        android:id="@+id/subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:text="@{@string/seller_item_detail_subtitle_more_items(subtitleItemModel.extraPrice)}"
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:textColor="?attr/colorPrimary"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Popular Bundles"/>

</layout>
