<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="activeItemModel"
            type="com.foobarust.android.order.OrderRecentListModel.OrderRecentActiveItemModel" />
        <variable
            name="listener"
            type="com.foobarust.android.order.OrderRecentAdapter.OrderRecentAdapterListener" />
        <import type="com.foobarust.android.R"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> listener.onOrderClicked(activeItemModel.orderId)}"
        app:cardElevation="@dimen/elevation_none"
        app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_large">

            <TextView
                android:id="@+id/identifier_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{activeItemModel.orderIdentifierTitle}"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:lineSpacingMultiplier="1.2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="[#EA2PE] Processing your order."/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/order_image_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.Foobar.SmallComponent"
                app:glideUrl="@{activeItemModel.orderImageUrl}"
                app:glideCenterCrop="@{true}"
                app:glidePlaceholder="@{R.drawable.placeholder_card}"
                app:layout_constraintTop_toBottomOf="@id/identifier_title_text_view"
                app:goneIf="@{activeItemModel.orderImageUrl == null}"/>

            <TextView
                android:id="@+id/order_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@{activeItemModel.orderTitle}"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textAppearance="?attr/textAppearanceCaption"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/spacing_large"
                android:maxLines="1"
                app:drawableStartCompat="@drawable/ic_fastfood"
                app:drawableTint="@color/material_on_surface_emphasis_medium"
                app:layout_constraintTop_toBottomOf="@id/order_image_view"
                app:drawableFitVertical="@{true}"
                tools:text="[On-Campus] Happy Restaurant" />

            <TextView
                android:id="@+id/delivery_location_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:text="@{activeItemModel.orderDeliveryAddress}"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:textAppearance="?attr/textAppearanceCaption"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/spacing_large"
                android:maxLines="1"
                android:ellipsize="end"
                app:drawableStartCompat="@drawable/ic_location_on"
                app:drawableTint="@color/material_on_surface_emphasis_medium"
                app:layout_constraintTop_toBottomOf="@id/order_title_text_view"
                app:drawableFitVertical="@{true}"
                tools:text="LG7/F, Academic Building, Hong Kong University of Science and Technology, Clear Water Bay, Sai Kung" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/state_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:indeterminate="false"
                app:layout_constraintTop_toBottomOf="@id/delivery_location_text_view" />

            <TextView
                android:id="@+id/last_update_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xmedium"
                android:text="@{activeItemModel.orderUpdatedAt}"
                android:textAppearance="?attr/textAppearanceOverline"
                android:textColor="@color/material_on_surface_emphasis_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_progress_bar"
                tools:text="Last Update 23:57"/>

            <TextView
                android:id="@+id/show_detail_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/order_recent_item_view_order"
                android:textColor="?attr/colorPrimary"
                android:textAppearance="?attr/textAppearanceButton"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/spacing_xmedium"
                app:drawableStartCompat="@drawable/ic_arrow_forward"
                app:drawableTint="?attr/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/last_update_text_view"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>