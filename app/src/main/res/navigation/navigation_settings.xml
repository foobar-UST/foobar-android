<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_settings"
    app:startDestination="@id/settingsFragment">

    <!-- SettingsFragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.foobarust.android.settings.SettingsFragment"
        android:label="@string/fragment_label_settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_licenseFragment"
            app:destination="@id/licenseFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_settingsFragment_to_notificationFragment"
            app:destination="@id/notificationFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_settingsFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_settingsFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_signInActivity"
            app:destination="@id/signInActivity" />
        <action
            android:id="@+id/action_settingsFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
        <action
            android:id="@+id/action_settingsFragment_to_orderHistoryFragment"
            app:destination="@id/orderHistoryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.foobarust.android.settings.NotificationFragment"
        android:label="@string/fragment_label_notification"
        tools:layout="@layout/fragment_notification"/>

    <fragment
        android:id="@+id/licenseFragment"
        android:name="com.foobarust.android.settings.LicenseFragment"
        android:label="@string/fragment_label_license"
        tools:layout="@layout/fragment_license"/>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.foobarust.android.settings.FavoriteFragment"
        android:label="@string/fragment_label_favorite"
        tools:layout="@layout/fragment_favorite"/>

    <fragment
        android:id="@+id/orderHistoryFragment"
        android:name="com.foobarust.android.order.OrderHistoryFragment"
        android:label="@string/fragment_label_order_history"
        tools:layout="@layout/fragment_order_history"/>

    <!-- ProfileFragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.foobarust.android.profile.ProfileFragment"
        android:label="@string/fragment_label_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_textInputDialog"
            app:destination="@id/textInputDialog" />
    </fragment>

    <!-- TutorialFragment -->
    <dialog
        android:id="@+id/tutorialFragment"
        android:name="com.foobarust.android.tutorial.TutorialFragment"
        tools:layout="@layout/fragment_tutorial"/>

    <activity
        android:id="@+id/signInActivity"
        android:name="com.foobarust.android.auth.AuthActivity"
        tools:layout="@layout/activity_auth"/>

    <!-- TextInputDialog -->
    <dialog
        android:id="@+id/textInputDialog"
        android:name="com.foobarust.android.common.TextInputDialog"
        tools:layout="@layout/dialog_text_input_entry">
        <argument
            android:name="property"
            app:argType="com.foobarust.android.common.TextInputProperty"
            app:nullable="false"/>
    </dialog>

</navigation>