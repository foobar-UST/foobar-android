<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Full screen dialog fragment -->
    <style name="ThemeOverlay.Foobar.Dialog.Fullscreen.DayNight.Search" parent="ThemeOverlay.Foobar.Dialog.Fullscreen.DayNight">
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
        <item name="android:windowBackground">?attr/scrimBackground</item>
    </style>

    <style name="ThemeOverlay.Foobar.Dialog.Fullscreen.DayNight" parent="ThemeOverlay.Foobar.Dialog.Fullscreen"/>

    <style name="ThemeOverlay.Foobar.Dialog.Fullscreen" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
    </style>

    <!-- Alert dialog -->
    <style name="ThemeOverlay.Foobar.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">@dimen/medium_component_corner_radius</item>
    </style>

    <!-- Bottom sheet dialog -->
    <style name="ThemeOverlay.Foobar.BottomSheetDialog.DayNight" parent="@style/ThemeOverlay.Foobar.BottomSheetDialog"/>

    <style name="ThemeOverlay.Foobar.BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Foobar.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <!--item name="android:windowBackground">?attr/scrimBackground</item-->
    </style>

    <!-- Onboarding activity -->
    <style name="Theme.Foobar.Onboarding.DayNight" parent="Theme.Foobar.Onboarding"/>

    <style name="Theme.Foobar.Onboarding" parent="Theme.Foobar">
        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Auth activity -->
    <style name="Theme.Foobar.Auth.DayNight" parent="Theme.Foobar.Auth"/>

    <style name="Theme.Foobar.Auth" parent="Theme.Foobar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?android:attr/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <!-- Splash activity -->
    <style name="Theme.Foobar.Splash.DayNight" parent="Theme.Foobar.Splash"/>

    <style name="Theme.Foobar.Splash" parent="Theme.Foobar">
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.Foobar.DayNight" parent="Theme.Foobar"/>

    <style name="Theme.Foobar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/maroon_500</item>
        <item name="colorPrimaryVariant">@color/maroon_700</item>
        <item name="colorSecondary">@color/mint_500</item>
        <item name="colorSecondaryVariant">@color/mint_300</item>
        <item name="colorError">@color/red_500</item>
        
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Foobar.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Foobar.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Foobar.LargeComponent</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.Foobar.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Foobar.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Foobar.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Foobar.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Foobar.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Foobar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Foobar.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Foobar.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Foobar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Foobar.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Foobar.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Foobar.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Foobar.Overline</item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
        <item name="motionInterpolatorIncoming">@android:interpolator/decelerate_cubic</item>
        <item name="motionInterpolatorOutgoing">@android:interpolator/accelerate_cubic</item>

        <item name="scrimBackground">@color/white_alpha_20</item>

        <!-- Theme Overlay -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Foobar.BottomSheetDialog.DayNight</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Foobar.AlertDialog</item>

        <!-- Styles -->
        <item name="radioButtonStyle">@style/Widget.Foobar.RadioButton</item>
        <item name="checkboxStyle">@style/Widget.Foobar.CheckBox</item>
        <item name="bottomSheetStyle">@style/Widget.Foobar.BottomSheet</item>
        <item name="sellerActionChipStyle">@style/Widget.Foobar.Chip.SellerAction</item>

        <item name="android:statusBarColor">?android:attr/colorBackground</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="cartBackgroundColor">@color/maroon_400</item>

    </style>

</resources>