<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearance.Foobar.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Foobar.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_component_corner_radius</item>
    </style>

    <style name="ShapeAppearance.Foobar.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_component_corner_radius</item>
    </style>

    <!-- Corner Radius -->
    <dimen name="small_component_corner_radius">4dp</dimen>
    <dimen name="medium_component_corner_radius">8dp</dimen>
    <dimen name="large_component_corner_radius">16dp</dimen>
</resources>