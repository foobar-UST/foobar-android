<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Foobar.Button.TextButton.Secondary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="Widget.Foobar.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:progressBackgroundTint">@color/material_on_surface_stroke</item>
        <item name="android:secondaryProgressTint">@color/yellow</item>
    </style>
    
    <style name="Widget.Foobar.RatingBar.Indicator" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">false</item>
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:progressBackgroundTint">@color/material_on_surface_stroke</item>
        <item name="android:secondaryProgressTint">@color/yellow</item>
    </style>

    <style name="Widget.Foobar.Chip.Action" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
        <item name="iconStartPadding">@dimen/spacing_xmedium</item>
        <item name="chipMinTouchTargetSize">@dimen/spacing_none</item>
        <item name="chipIconSize">17dp</item>
        <item name="chipIconTint">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="Widget.Foobar.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="Widget.Foobar.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="Widget.Foobar.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    
    <style name="Widget.Foobar.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Foobar.BottomSheet</item>
    </style>
</resources>